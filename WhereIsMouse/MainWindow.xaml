<Window x:Class="WhereIsMouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhereIsMouse"
        mc:Ignorable="d"
       Title="WhereIsMouse" Width="400" Height="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="cursorPositionLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="288" Height="57" FontSize="18" FontFamily="Arial Black" BorderBrush="#FF3166CE" BorderThickness="3,3,3,3"/>
        <Button Content="Min" Margin="0,50,140,0" VerticalAlignment="Top" Click="Button_Click_Min" Height="30" HorizontalAlignment="Right" Width="70" IsTabStop="False" FontFamily="Arial Black" FontSize="18" Background="#FF71DE6D"/>
        <Button Content="Close" Margin="0,50,50,0" VerticalAlignment="Top" Click="Button_Click_Close" Height="30" HorizontalAlignment="Right" Width="70" FontSize="18" FontFamily="Arial Black" Background="#FFE06666"/>

    </Grid>
</Window>




     